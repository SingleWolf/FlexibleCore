<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RecyclerView">
        <attr name="layoutManager" format="string"/>
        <attr name="android:orientation"/>
        <attr name="spanCount" format="integer"/>
        <attr name="reverseLayout" format="boolean"/>
        <attr name="stackFromEnd" format="boolean"/>
    </declare-styleable>

    <!--商品详情-->
    <declare-styleable name="DragScrollDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float" />
        <!-- how long the animation keep-->
        <attr name="duration" format="integer" />
        <!-- default panel to show after init-->
        <attr name="drag_default_panel" format="enum">
            <enum name="front" value="0" />
            <enum name="behind" value="1" />
        </attr>
    </declare-styleable>

    <!--自动无限轮播banner-->
    <declare-styleable name="MultiBanner">
        <!--ViewPager布局种类-->
        <attr name="vp_layout_type" format="integer" />
        <!--页面切换时间间隔-->
        <attr name="interval" format="integer" />
        <attr name="isCanLoop" format="boolean" />
        <attr name="isAutoPlay" format="boolean" />
        <!--<attr name="indicator_gravity" format="integer"/>-->
        <attr name="indicator_checked_color" format="color" />
        <attr name="indicator_normal_color" format="color" />
        <attr name="indicator_radius" format="dimension" />
        <attr name="indicator_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>
</resources>